<% content_for :header do %>
	<h1><%= @title = 'Viewing Admin ' + @admin.name %></h1>
<% end %>

<div id="user_details">
<p>
  <b>Name:</b>
  <%= @admin.name %>
</p>

<p>
  <b>Email:</b>
  <%= mail_to @admin.email, @admin.email.split('@')[0] %>
</p>
</div>

<br />

<div class="bottom_nav">
<%= link_to image_tag('edit.png', :class => 'action') + ' Edit Admin', edit_admin_path(@admin), :title => 'Edit admin.' %> |
<%= link_to image_tag('remove.png', :class => 'action') + ' Delete Admin', @admin, :confirm => 'Are you sure you want to delete ' + @admin.name + '?', :method => :delete, :title => 'Remove admin.' %> |
<%= link_to image_tag('back.png', :class => 'action') + ' To Admin List', admins_path, :title => 'To admin list.' %>
</div>