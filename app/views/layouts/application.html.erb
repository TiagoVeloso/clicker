<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

</head>
<body>

	<div id="main">
	<div id="nav_bar_div">
		<ul id="nav_bar">
		<% unless @selected_user.nil? %>
		<li> Clicking as <%= @selected_user.name %> |</li>
		<% end %>
		<% if admin_signed_in? %>
		<li>Hi <%= current_adm %>! |</li>
		<li><%= link_to 'Sign Out', destroy_admin_session_path %> |</li>
		<li><%= link_to 'Settings', edit_admin_path(current_admin) %> |</li>
		<li><%= link_to 'Admin List', admins_path %> |</li>
		<% else %>
		<li><%= link_to 'Sign In', new_admin_session_path %> |</li>
		<% end %>
		<%= link_to 'Clicker List', users_path %>
		<% if admin_signed_in? %>
		 | <%= link_to 'Frozen List', frozen_users_path %>
		<% end %>
		</ul>
	</div>
		<%= yield %>
	</div>
</body>
</html>
