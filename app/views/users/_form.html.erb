<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>*<br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :url %>*<br />
    <%= f.text_field :url %>
  </div>
<% if request.fullpath.end_with?("edit") %><!-- start click editors -->
  <div class="field">
    <%= f.label :clicks_given %><br />
    <%= f.text_field :clicks_given %>
  </div>
  <div class="field">
    <%= f.label :clicks_received %><br />
    <%= f.text_field :clicks_received %>
  </div>
<!-- end click editors --><% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
