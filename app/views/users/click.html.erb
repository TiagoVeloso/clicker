<h1><%= @title = "Clicking " + @user.name %></h1>

<%= render :partial => 'shared/flash', :locals => { :flash => flash } %>

<%= form_tag(@next_user ? click_url(:id => @next_user) : {} ,:method => :post) do %>
  <%= hidden_field_tag 'clicked_user_id', @user.id %>
  <%= submit_tag 'Next User', :disabled => !@next_user %>
  <%= submit_tag 'Skip User', :disabled => !@next_user %>
<% end %>

<%= form_tag(root_path,:method => :post) do %>
  <%= hidden_field_tag 'clicked_user_id', @user.id %>
  <%= submit_tag 'End Clicking' %>
<% end %>

Currently clicking as: <%= @selected_user.name %>

<iframe src=<%= @user.url %> width="100%" height="600">
  <p>Your browser does not support iframes.</p>
</iframe>