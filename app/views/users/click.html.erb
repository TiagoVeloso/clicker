<h1><%= @title = "Clicking " + @user.name %></h1>

<br />

<%= render :partial => 'shared/flash', :locals => { :flash => flash } %>

<br />

<%= form_tag(click_user_path(@next_user), :method => :post, :class => 'click_user') do %>
  <%= hidden_field_tag 'clicked_user', @user.id %>
  <%= text_field_tag 'validation_line', nil ,:size => 75 %>
  <%= submit_tag 'Next User', :disabled => !@next_user %>
  <%= submit_tag 'Skip User', :disabled => !@next_user %>
  <%= submit_tag 'End Clicking' %>
<% end %>

<br />

<div class="click_frame_div" style="text-align:center;"> 
<iframe id="dt_frame" name="dt_frame" src=<%= @user.url %> frameborder="0" scrolling="no" marginheight="0" width="100%" height="90%">
Your browser does not support iframes!
</iframe> 
</div>

<br />

<%= render :partial => 'shared/footer' %>
